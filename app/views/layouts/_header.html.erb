<header class='navbar navbar-expand-lg navbar-light bg-light'>

  <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarTogglerDemo01' aria-controls='navbarTogglerDemo01' aria-expanded='false' aria-label='Toggle navigation'>
    <span class='navbar-toggler-icon'></span>
  </button>

  <div class='collapse navbar-collapse' id='navbarTogglerDemo01'>
    <ul class='navbar-nav mx-auto mt-lg-0'>

      <!------------- ログインしている場合 ------------>
      <% if user_signed_in? %>
      <li class='nav-item'>
        <%= link_to "メイン", home_index_path, class: 'nav-link' %>
      </li>
      <li class='nav-item'>
        <%= link_to "「電車アプリとは」", about_path, class: 'nav-link' %>
      </li>
      <li class='nav-item'>
        <%= link_to "お気に入り登録", '#', class: 'nav-link' %>
      </li>
      <li class='nav-item'>
        <%= link_to "お気に入り一覧", '#', class: 'nav-link' %>
      </li>
      <li class='nav-item'>
        <%= link_to "投稿", posts_path, class: 'nav-link' %>
      </li>
      <li class='nav-item'>
        <%= link_to current_user.name, mypage_user_path(current_user.id), class: 'nav-link' %>
      </li>

      <!---- 検索機能はまだ機能していないのでとりあえず形のみ -------->
      <li>
        <form class='form-inline my-2 my-lg-0'>
          <input class='form-control mr-sm-2' type='search' placeholder='Search' aria-label='Search'>
          <button class='btn btn-outline-success my-2 my-sm-0' type='submit'>Search</button>
        </form>
      </li>

      <!-------- ログインしていない場合 --------->
      <% else %>
      <li class='nav-item'>
        <%= link_to "メイン", root_path, class: 'nav-link' %>
      </li>
      <li class='nav-item'>
        <%= link_to "「電車アプリとは」", about_path, class: 'nav-link' %>
      </li>
      <li class='nav-item'>
        <%= link_to "新規登録", new_user_registration_path, class: 'nav-link' %>
      </li>
      <li class='nav-item'>
        <%= link_to "ログイン", new_user_session_path, class: 'nav-link' %>
      </li>
      <% end %>

      <!-------- 管理者としてログインしている場合-------->
      <% if user_signed_in? && current_user.admin == 1 %>
      <li class='nav-item'>
        <%= link_to "ユーザー一覧", users_index_path, class: 'nav-link' %>
      </li>

      <li class='nav-item'>
        <%= link_to "投稿一覧", posts_index_path, class: 'nav-link' %>
      </li>
      <% end %>

    </ul>

  </div>
</header>
